#include <stdio.h>
#include <string.h>

struct employee{

	char name[20];
	char pid[20];
	int pay;
 };

int main (void){
	
	struct employee emp[3];
	int i;
	
	for(i=0;i<3;i++){
		
	printf("이름: ");
	scanf("%s", emp[i].name);
	printf("주민번호: ");
	scanf("%s",emp[i].pid);
	printf("급여: ");
	scanf("%d",&emp[i].pay);
			
	}	

	printf("--------------------\n");

	for(i=0;i<3;i++){
	
	printf("이름: %s \n",emp[i].name);
	printf("주민번호: %s \n",emp[i].pid);
	printf("급여 : %d \n",emp[i].pay);
				
	}


 ------------------------------------------------------------------------------



	return 0;
}


#include <stdio.h>
#include <string.h>

struct student {

	int id;
	char name[20];
	int sc[3];
	int total;
	double ave;
	
};


int main (void){
	
	struct student ST[3];
	int i, j;
	
	for (i=0; i<3; i++){
		
		scanf("%d %s", &ST[i].id,ST[i].name);
		//scanf("%d %d %d", &ST[i].sc[0], &ST[i].sc[1], &ST[i].sc[2]);
		
		for(j=0; j<3; j++)
			scanf("%d", &ST[i].sc[j]);
		
		ST[i].total=ST[i].sc[0] + ST[i].sc[1] + ST[i].sc[2];
		ST[i].ave = ST[i].total / 3.0;
	}	
	
	printf("-----------------------------------\n");
	printf("번호 이  름 국어 영어 수학 합계 평균 \n");
	
	for(i=0; i<3; i++)
		printf("%4d %6s %4d %4d %4d %4d %3.1lf \n", ST[i].id, ST[i].name, ST[i].sc[0], ST[i].sc[1], ST[i].sc[2], ST[i].total, ST[i].ave);
			
	return 0;
}
