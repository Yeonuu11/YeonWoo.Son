#include <stdio.h>
#include <string.h>

struct employee
{
	char name[20];
	char pid[20];
	int pay;
 };

int main (void){
	
	struct employee emp;
	
	printf("이름: ");
	scanf("%s", emp.name);
	printf("주민번호: ");
	scanf("%s",emp.pid);
	printf("급여: ");
	scanf("%d",&emp.pay);
	
	printf("--------------------\n");
	
	printf("이름: %s \n",emp.name);
	printf("주민번호: %s \n",emp.pid);
	printf("급여 : %d \n",emp.pay);
	
	return 0;
}

