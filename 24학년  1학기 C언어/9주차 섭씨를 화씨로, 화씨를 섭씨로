#include <stdio.h>

double CeltoFah (double c){
	return 1.8*c+32;
}

double FahtoCel (double f){
	return (f-32)/1.8;
}

int main (void){
	
	int select;
	double num;
	
	printf("1. 섭씨 > 화씨 , 2. 화씨 > 섭씨\n");
	printf("선택 :");
	scanf("%d",&select);
	
	if(select == 1){
		printf("섭씨 입력 :");
		scanf("%lf",&num);
		printf("변환된 화씨 : %.2lf\n",CeltoFah(num));
	}
	else{
		printf("화씨 입력 :");
		scanf("%lf",&num);
		printf("변환된 섭씨 : %.2lf\n",FahtoCel(num));		
	}
	return 0;
}
