세 개의 정수를 인자로 받아서 그 중 가장 큰 수와 작은 수를 반환


#include <stdio.h>

int Maxnum(int n1,int n2,int n3){
	
	if(n1>n2)
		return (n1>n3) ? n1 : n3;
	else
		return (n2>n3) ? n2 : n3;
  }

int Minnum(int n1,int n2,int n3){
	
	if(n1>n2)
		return (n2>n3) ? n3 : n2;
	else
		return (n1>n3) ? n3 : n1;
}

int main (void){
	
	int num1, num2, num3;
	printf("세 개의 정수 입력 :");
	scanf("%d %d %d",&num1,&num2,&num3);
	
	printf("가장 큰 값 : %d\n",Maxnum(num1,num2,num3));
	printf("가장 작은 값 : %d",Minnum(num1,num2,num3));
	
	return 0;
	}
